use crate::alloc::string::*;
use crate::alloc::vec::*;

/// The mail struct used to sign or verify a mail.
#[derive(Debug)]
pub struct Email<'a> {
    raw: &'a str,
    pub(crate) parsed: (Vec<(&'a str, &'a str, &'a str)>, Option<&'a str>),
    dkim_header: Option<DkimHeader>,
}

#[derive(Debug)]
pub enum VerificationError {
    MissingDkimHeader,
    BodyHashesDontMatch,
    InvalidSpecifiedLenght,
    FailedSigning(String),
}

impl<'a> Email<'a> {
    pub fn try_from(email: &'a str) -> Result<Email, Error> {
        let mut dkim_header = None;
        let (headers, body) = parse_message_with_separators(email.as_bytes()).unwrap();

        match parse_message_with_separators(email.as_bytes()) {
            Ok(_) => {}
            Err(e) => panic!("parse email fail {:?}", e),
        }

        let headers: Vec<(&str, &str, &str)> = headers
            .iter()
            .filter_map(|(n, s, v)| {
                if let (Ok(name), Ok(separator), Ok(value)) = (
                    core::str::from_utf8(n),
                    core::str::from_utf8(s),
                    core::str::from_utf8(v),
                ) {
                    Some((name, separator, value))
                } else {
                    None
                }
            })
            .collect();

        let body = body.map(|b| core::str::from_utf8(b).ok()).flatten();

        for (name, _separator, value) in headers.iter() {
            if unicase::eq_ascii(*name, "DKIM-Signature") {
                match DkimHeader::parse(*name, *value) {
                    Ok(header) => dkim_header = Some(header),
                    Err(e) => panic!("Can't parse DKIM header {:?}", e),
                }
                break;
            }
        }

        Ok(Email {
            raw: email,
            dkim_header,
            parsed: (headers, body),
        })
    }
}

